generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  WALKER
  OWNER
}

model User {
  id           String   @id @default(uuid())
  fullName     String   @map("full_name")
  email        String   @unique
  verifiedAt   DateTime @map("verified_at")
  phone        String
  password     String
  rating       Float    @default(0.0)
  role         Role
  avatarUrl    String   @map("avatar_url")
  totalReviews Int      @default(0) @map("total_reviews")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  owner        Owner?
  walker       Walker?

  @@map("users")
}

model Owner {
  id                  String   @id @default(uuid())
  userId              String   @unique @map("user_id")
  defaultAddressLine1 String   @map("default_address_line_1")
  defaultAddressLine2 String   @map("default_address_line_2")
  defaultZipCode      String   @map("default_zip_code")
  defaultCity         String   @map("default_city")
  defaultState        String   @map("default_state")
  defaultCountry      String   @map("default_country")
  defaultLatitude     Float    @map("default_latitude")
  defaultLongitude    Float    @map("default_longitude")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id])
  dogs     Dog[]
  payments Payment[]

  @@map("owners")
}

model Walker {
  id                String   @id @default(uuid())
  userId            String   @unique @map("user_id")
  totalWalks        Int      @default(0) @map("total_walks")
  serviceRadius     Float    @default(0.0) @map("service_radius")
  basePricePerWalk  Float    @default(0.0) @map("base_price_per_walk")
  isPriceNegotiable Boolean  @default(false) @map("is_price_negotiable")
  balance           Float    @default(0.0)
  updatedAt         DateTime @updatedAt @map("updated_at")
  createdAt         DateTime @default(now()) @map("created_at")

  user     User      @relation(fields: [userId], references: [id])
  payments Payment[]
  walks    Walk[]

  @@map("walkers")
}

enum DogSize {
  TINY
  SMALL
  MEDIUM
  LARGE
  GIANT
  UNKNOWN
}

enum DogGender {
  MALE
  FEMALE
}

model Dog {
  id        String    @id @default(uuid())
  name      String
  dogSize   DogSize   @default(UNKNOWN) @map("dog_size")
  age       Int
  gender    DogGender
  ownerId   String    @map("owner_id")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  owner    Owner     @relation(fields: [ownerId], references: [id])
  dogWalks DogWalk[]

  @@map("dogs")
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  PIX
  WALLET
}

enum PaymentStatus {
  PENDING
  FAILED
  CONFIRMED
  CANCELLED
  REFUNDED
}

model Payment {
  id            String        @id @default(uuid())
  paymentMethod PaymentMethod @map("payment_method")
  status        PaymentStatus
  value         Float         @default(0.0)
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  payerId String @map("payer_id")
  payer   Owner  @relation(fields: [payerId], references: [id])

  recipientId String @map("recipient_id")
  recipient   Walker @relation(fields: [recipientId], references: [id])

  @@map("payments")
}

enum WalkStatus {
  REQUESTED
  ACCEPTED
  WALK_STARTED
  WALK_FINISHED
  CANCELLED_BY_WALKER
  CANCELLED_BY_OWNER
}

model Walk {
  id          String     @id @default(uuid())
  duration    Int        @default(0) @map("duration")
  status      WalkStatus @default(REQUESTED)
  startLat    Float      @map("start_lat")
  startLong   Float      @map("start_long")
  endLat      Float      @map("end_lat")
  endLong     Float      @map("end_long")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  cancelledAt DateTime?  @map("cancelled_at")

  walkerId String    @map("walker_id")
  walker   Walker    @relation(fields: [walkerId], references: [id])
  dogWalks DogWalk[]

  @@map("walks")
}

model DogWalk {
  id String @id @default(uuid())

  dogId     String   @map("dog_id")
  dog       Dog      @relation(fields: [dogId], references: [id])
  walkId    String   @map("walk_id")
  walk      Walk     @relation(fields: [walkId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([dogId, walkId])
  @@map("dog_walks")
}
